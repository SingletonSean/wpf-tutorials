<UserControl
    x:Class="MvvmToolkitDemo.Pages.ShoppingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:addshoppinglistitem="clr-namespace:MvvmToolkitDemo.Features.AddShoppingListItem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MvvmToolkitDemo.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewshoppinglist="clr-namespace:MvvmToolkitDemo.Features.ViewShoppingList"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid MaxWidth="1000" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <addshoppinglistitem:AddShoppingListItemView
                Grid.Column="0"
                Margin="0,0,25,0"
                DataContext="{Binding AddShoppingListItemViewModel}" />

            <viewshoppinglist:ShoppingListView
                Grid.Column="1"
                Margin="25,0,0,0"
                DataContext="{Binding ShoppingListViewModel}" />

        </Grid>
    </ScrollViewer>
</UserControl>
