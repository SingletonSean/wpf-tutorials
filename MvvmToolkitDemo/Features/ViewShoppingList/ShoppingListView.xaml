<UserControl
    x:Class="MvvmToolkitDemo.Features.ViewShoppingList.ShoppingListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MvvmToolkitDemo.Features.ViewShoppingList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock FontSize="24" Text="Shopping List" />

        <ListView
            Margin="0,25,0,0"
            BorderThickness="0"
            ItemsSource="{Binding ShoppingListItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Margin="0,5" Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
